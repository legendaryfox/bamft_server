<h1>Edit Menu Item</h1>

<%= form_for(@menu_item) do |menu_item_form| %>
	<%= render 'shared/error_messages', :object => menu_item_form.object %>
	<%= render 'fields', :menu_item_form => menu_item_form %>

	<div class="actions">
		<%= menu_item_form.submit "Update", :class => "btn primary" %>
	</div>
<% end %>